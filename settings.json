{
  //! Native VSCode settings //
  // Customization of window title bar style
  "window.titleBarStyle": "custom",
  // Editor settings
  "editor.matchBrackets": "never", // Do not highlight matching brackets
  "files.trimTrailingWhitespace": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "auto",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "breadcrumbs.enabled": false,
  "editor.glyphMargin": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.indentation": false,
  "editor.lineNumbers": "off",
  "editor.formatOnSave": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorWidth": 2,
  // Workspace settings
  "security.workspace.trust.untrustedFiles": "open",
  "git.decorations.enabled": false,
  // Sidebar and Activity Bar
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "single",
  // Terminal settings
  "terminal.integrated.fontSize": 14,
  // Tips and help
  "workbench.tips.enabled": false,
  // Layout and visibility settings
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  "workbench.statusBar.visible": false,
  "editor.wordWrap": "wordWrapColumn",
  //! Extensions adjustments //
  // Workspace color theme
  "workbench.colorTheme": "Minimal",
  // Icon theme for the workbench
  "workbench.iconTheme": "minimal-icons-without-explorer-arrows",
  // Editor font family
  "editor.fontFamily": "'JetBrainsMono NF'",
  // Enable GitHub Copilot autocompletions
  "github.copilot.editor.enableAutoCompletions": true,
  // PHP executable path for validation
  "php.validate.executablePath": "c:/xampp/php/php.exe",
  // Window transparency level
  "glassit.alpha": 255,
  // Custom CSS for VSCode
  "vscode_custom_css.imports": [
    "file://C:/Users/tiago/AppData/Roaming/Code/User/config-vscode.css"
  ]
}